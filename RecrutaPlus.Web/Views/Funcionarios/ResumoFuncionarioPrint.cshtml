                                                    <label class="d-block">@Html.DisplayFor(model => model.CPF)</label>
                                                </div>

                                                <div class="col-sm-4 col-md-4 col-lg-2">
                                                    <label class="d-block text-dark fw-bold">@Html.DisplayNameFor(model => model.RG)</label>
                                                    <label class="d-block">@Html.DisplayFor(model => model.RG)</label>
                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
