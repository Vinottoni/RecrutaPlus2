                                                    <hr class="text-dark" />
                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
                                                    <label class="d-block text-dark fw-bold">@FuncionarioResource.LABEL_CARGOS</label>
                                                    <label class="d-block">@Html.DisplayFor(model => model.CargoToString)</label>
                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
                                                    <label class="d-block text-dark fw-bold">@Html.DisplayNameFor(model => model.Salario)</label>
                                                    <label class="d-block"><small>R$&nbsp;</small>@Html.DisplayFor(model => model.Salario)</label>
                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
                                                    <label class="d-block text-dark fw-bold">@Html.DisplayNameFor(model => model.Ativo)</label>
                                                    <label class="d-block">
                                                        @if (Model.Ativo == true)
                                                        {
                                                            <span class="badge badge-subtle btn-badge-active">@DefaultResource.MSG_SIM</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-subtle btn-badge-off">@DefaultResource.MSG_NAO</span>
                                                        }
                                                    </label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--DADOS RELACIONADOS A EMPRESA-->
