                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
                                                    <label class="d-block text-dark fw-bold">@Html.DisplayNameFor(model => model.Nome)</label>
                                                    <label class="d-block">@Html.DisplayFor(model => model.Nome)</label>
                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
                                                    <label class="d-block text-dark fw-bold">@Html.DisplayNameFor(model => model.Email)</label>
                                                    <label class="d-block">@Html.DisplayFor(model => model.Email)</label>
                                                </div>
                                                <div class="col-sm-4 col-md-4 col-lg-2">
