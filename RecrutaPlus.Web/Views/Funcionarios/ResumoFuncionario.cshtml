                                            <div class="card-header">
                                                <h2 class="mb-0">
                                                    <button class="btn btn-subtle-primary btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseDadosRDV">
                                                        <span>
                                                            RDV<span> -  </span>
                                                        </span>
                                                        <span class="float-right"><i class="fa-solid fa-chevron-right"></i></span>
                                                    </button>
                                                </h2>
                                            </div>
                                            <div id="collapseDadosRDV" class="collapse" data-parent="#accordionDadosRDV">
                                                <div class="card-body">
                                                    <div class="row col-sm-12 col-md-12">
                                                        <div class="col-sm-4 col-md-4 col-lg-2">
                                                            @*<label class="d-block font-weight-bold">@Html.DisplayNameFor(model => model.Funcionarios.FirstOrDefault().Nome)</label>
