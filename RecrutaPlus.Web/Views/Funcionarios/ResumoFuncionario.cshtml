@model FuncionarioSearch

@{
    Layout = "_Layout";
    ViewData["Title"] = "Funcionários";
    ViewData["SubTitle"] = "Consulta";
}

<div class="page">

    <div class="page-inner">

        <header class="page-title-bar">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">
                        <a asp-controller="Home" asp-action="Index"><i class="breadcrumb-icon fa fa-angle-left mr-2"></i>Home</a>
                        <a asp-controller="RDVConsultas" asp-action="Index"><i class="breadcrumb-icon fa fa-angle-left mr-2"></i>@ViewData["Title"]</a>
                        <a href="#"><i class="breadcrumb-icon fa fa-angle-left mr-2"></i>@ViewData["SubTitle"]</a>
                    </li>
                </ol>
            </nav>
            <h1 class="page-title"> @ViewData["Title"] </h1>
        </header>


        <div class="page-section">

            <div class="card-deck-xl">

                <div class="card card-fluid">

                    <div class="card-header"> <span class="h5 mb-0">@ViewData["SubTitle"]</span> </div>

                    <div class="card-body">

                        <h4 class="card-title"> @ViewData["Info"] </h4>

                        <hr />

                        <div>

                            <div class="row">
