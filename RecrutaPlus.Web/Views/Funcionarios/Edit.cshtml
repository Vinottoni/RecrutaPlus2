@model FuncionarioViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Funcionários";
    ViewData["SubTitle"] = "Editar";
    ViewData["Informacoes"] = "Informações";
}

<div class="content-pages">
    <div class="container">
        <div class="page-titles">
            <h2 class="ml-0">
                @ViewData["Title"]
            </h2>
        </div>

        <div class="page-section">

            <div class="card-deck-xl">

                <div class="card-custom card-fluid shadow">

                    <div class="card-body">

                        <form asp-action="Edit" id="formEdit" class="col-12 col-sm-12 col-md-12">

                            <fieldset>
                                <input type="hidden" asp-for="FuncionarioId" />
                                <input type="hidden" asp-for="CadastradoPor" />
                                <input type="hidden" asp-for="Cadastro" />
                                <input type="hidden" asp-for="Edicao" />
                                <input type="hidden" asp-for="EditadoPor" />
                                <input type="hidden" asp-for="VersionStamp" />
                                <input type="hidden" asp-for="GuidStamp" />

                                <div class="form-row col-12 col-sm-12 col-md-12 flex-custom container">

                                    <div class="col-12 col-sm-12 col-md-12">
                                        <div class="text-left">
                                            <small class="text-primary fw-bold">@ViewData["SubTitle"]</small><br />
                                            <h2 class="">@ViewData["Informacoes"]</h2>
                                        </div>
                                        <hr class="hr-color text-primary" />
                                    </div>
                                    <div class="form-row col-12 col-sm-12 col-md-12 flex-custom gap-register">

                                        <div class="form-row col-12 col-sm-12 col-md-12 flex-custom">
                                            <div class="form-group col-12 col-sm-12 col-md-5">
                                                <label asp-for="Nome" class="text-primary fw-bold"></label>
                                                <input asp-for="Nome" class="form-control" placeholder="Digite seu Name" required min="0">
                                                <span asp-validation-for="Nome" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-4">
                                                <label asp-for="Email" class="text-primary fw-bold"></label>
                                                <input asp-for="Email" class="form-control" placeholder="Digite seu Email" required min="0">
                                                <span asp-validation-for="Email" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-2">
                                                <label asp-for="Telefone" class="text-primary fw-bold"></label>
                                                <input asp-for="Telefone" class="form-control" placeholder="Digite seu Celular">
                                                <span asp-validation-for="Telefone" class="form-text text-danger small"></span>
                                            </div>
                                        </div>

                                        <div class="form-row col-12 col-sm-12 col-md-12 flex-custom">
                                            <div class="form-group col-12 col-sm-12 col-md-3">
                                                <label asp-for="CPF" class="text-primary fw-bold"></label>
                                                <input asp-for="CPF" class="form-control" placeholder="Digite seu CPF">
                                                <span asp-validation-for="CPF" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-3">
                                                <label asp-for="RG" class="text-primary fw-bold"></label>
                                                <input asp-for="RG" class="form-control" placeholder="Digite seu RG">
                                                <span asp-validation-for="RG" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-2">
                                                <label asp-for="DataNascimento" class="text-primary fw-bold"></label>
                                                <input asp-for="DataNascimento" class="form-control" placeholder="Digite sua Data de Nascimento">
                                                <span asp-validation-for="DataNascimento" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-3">
                                                <label asp-for="Genero" class="text-primary fw-bold"></label>
                                                <select id="Genero" asp-for="Genero" asp-items="@ViewBag.SelectListGenero" class="form-control" data-allow-clear="true" data-placeholder="Selecione..." data-language="pt-BR">
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-row col-12 col-sm-12 col-md-12 flex-custom">
                                            <div class="form-group col-12 col-sm-12 col-md-2">
                                                <label asp-for="Dependentes" class="text-primary fw-bold"></label>
                                                <input asp-for="Dependentes" class="form-control " placeholder="Tem quantos Dependentes?" required>
                                                <span asp-validation-for="Dependentes" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-3">
                                                <label asp-for="Educacao" class="text-primary fw-bold"></label>
                                                <select id="Educacao" asp-for="Educacao" asp-items="@ViewBag.SelectListEducacao" class="form-control" data-allow-clear="true" data-placeholder="Selecione..." data-language="pt-BR">
                                                </select>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-6">
                                                <label asp-for="Endereco" class="text-primary fw-bold"></label>
                                                <input asp-for="Endereco" class="form-control" placeholder="Digite seu Endereço">
                                                <span asp-validation-for="Endereco" class="form-text text-danger small"></span>
                                            </div>
                                        </div>

                                        <div class="form-row col-12 col-sm-12 col-md-12 flex-custom">
                                            <div class="form-group col-12 col-sm-12 col-md-2">
                                                <label asp-for="CEP" class="text-primary fw-bold"></label>
                                                <input asp-for="CEP" class="form-control" placeholder="Digite seu CEP">
                                                <span asp-validation-for="CEP" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-4">
                                                <label asp-for="Bairro" class="text-primary fw-bold"></label>
                                                <input asp-for="Bairro" class="form-control" placeholder="Digite seu Bairro">
                                                <span asp-validation-for="Bairro" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-2">
                                                <label asp-for="Estado" class="text-primary fw-bold"></label>
                                                <input asp-for="Estado" class="form-control" placeholder="Digite seu Estado">
                                                <span asp-validation-for="Estado" class="form-text text-danger small"></span>
                                            </div>

                                            <div class="form-group col-12 col-sm-12 col-md-3">
                                                <span class="text-primary fw-bold">@FuncionarioResource.LABEL_CARGOS</span>
                                                <select id="CargoId" asp-for="CargoId" asp-items="@ViewBag.SelectListCargos" class="form-control" data-allow-clear="true" data-placeholder="Selecione..." data-language="pt-BR">
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-row col-12 col-sm-12 col-md-12 flex-custom">
                                            <div class="form-group col-12 col-sm-12 col-md-3">
                                                <label asp-for="Ativo" class="text-primary fw-bold"></label>
                                                <div class="mt-1 form-check form-switch">
                                                    <label class="form-check-label">
                                                        <input asp-for="Ativo" type="checkbox" class="form-check-input switch-size">
                                                    </label>
                                                </div>
                                                <span asp-validation-for="Ativo" class="form-text text-danger small"></span>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="col-12 col-sm-12 col-md-12">
                                        <hr class="hr-color text-primary" />
                                        <div class="text-left">
                                            <small class="text-primary fw-bold">Registrar</small><br />
                                            <h2>Salário</h2>
                                        </div>
                                        <hr class="hr-color text-primary" />
                                    </div>

                                    <div class="form-row col-12 col-sm-12 col-md-12 flex-custom justify-content-center gap-register">
                                        <div class="form-group col-12 col-sm-12 col-md-3">
                                            <label asp-for="ValorPorHora" class="text-primary fw-bold"></label>
                                            <input asp-for="ValorPorHora" class="form-control" placeholder="Valor por Hora">
                                            <span asp-validation-for="ValorPorHora" class="form-text text-danger small"></span>
                                        </div>

                                        <div class="form-group col-12 col-sm-12 col-md-3">
                                            <label asp-for="QuantidadeHoraMes" class="text-primary fw-bold"></label>
                                            <input asp-for="QuantidadeHoraMes" class="form-control" placeholder="Quatidade de Horas por Mês">
                                            <span asp-validation-for="QuantidadeHoraMes" class="form-text text-danger small"></span>
                                        </div>

                                        <div class="form-group col-12 col-sm-12 col-md-3">
                                            <label asp-for="DiariaVA" class="text-primary fw-bold"></label>
                                            <input asp-for="DiariaVA" class="form-control" placeholder="Quatidade de Horas por Mês">
                                            <span asp-validation-for="DiariaVA" class="form-text text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-row col-12 col-sm-12 col-md-ark12 flex-custom justify-content-center gap-register-salary">
                                <a class="btn btn-lg btn-dark" asp-action="Index" asp-route-state="true">Voltar</a>
                                <button form="formEdit" class="btn btn-primary btn-lg" type="submit">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>