@model FuncionarioViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Funcionários";
    ViewData["SubTitle"] = "Detalhes";
    ViewData["Informacoes"] = "Informações";
}

<div class="content-pages">
    <div class="container">
        <div class="page-titles">
            <h2 class="ml-0">
                @ViewData["Title"]
            </h2>
        </div>

        <div class="page-section">

            <div class="card-deck-xl">

                <div class="card-custom card-fluid shadow">

                    <div class="card-body">

                        <form asp-action="Create" class="col-12 col-sm-12 col-md-12">

                            <fieldset>
                                <div class="form-row col-12 col-sm-12 col-md-12 flex-custom container">

                                    <div class="col-12 col-sm-12 col-md-12">
                                        <div class="text-left">
                                            <small class="text-primary fw-bold">@ViewData["SubTitle"]</small><br />
                                            <h2>@ViewData["Informacoes"]</h2>
                                        </div>
                                        <hr class="hr-color text-primary" />
                                    </div>
                                    <div class="form-row col-12 col-sm-12 col-md-12 flex-custom">

                                        <dl class="flex-custom col-12 col-sm-12 col-md-12">
                                            <div class="col-12 col-sm-12 col-md-12 flex-custom">
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                                                    <dd>@Html.DisplayFor(model => model.Nome)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                                                    <dd>@Html.DisplayFor(model => model.Email)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Telefone)</dt>
                                                    <dd>@Html.DisplayFor(model => model.Telefone)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.CPF)</dt>
                                                    <dd>@Html.DisplayFor(model => model.CPF)</dd>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-md-12 flex-custom justify-content-between">
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.RG)</dt>
                                                    <dd>@Html.DisplayFor(model => model.RG)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                                                    <dd>@Html.DisplayFor(model => model.DataNascimento)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Genero)</dt>
                                                    <dd>@Html.DisplayFor(model => model.GeneroToString)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Educacao)</dt>
                                                    <dd>@Html.DisplayFor(model => model.EducacaoToString)</dd>
                                                </div>
                                            </div>

                                            <div class="col-12 col-sm-12 col-md-12 flex-custom ">
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Endereco)</dt>
                                                    <dd>@Html.DisplayFor(model => model.Endereco)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.CEP)</dt>
                                                    <dd>@Html.DisplayFor(model => model.CEP)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Bairro)</dt>
                                                    <dd>@Html.DisplayFor(model => model.Bairro)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Estado)</dt>
                                                    <dd>@Html.DisplayFor(model => model.Estado)</dd>
                                                </div>
                                            </div>

                                            <div class="col-12 col-sm-12 col-md-12 flex-custom ">
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@FuncionarioResource.LABEL_CARGOS</dt>
                                                    <dd>@Html.DisplayFor(model => model.CargoToString)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Salario)</dt>
                                                    <dd><small>R$&nbsp;</small>@Html.DisplayFor(model => model.Salario)</dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3">
                                                    <dt class="text-primary fw-bold">@Html.DisplayNameFor(model => model.Ativo)</dt>
                                                    <dd>
                                                        @if (Model.Ativo ==  true)
                                                        {
                                                            <span class="badge badge-subtle btn-badge-active">@DefaultResource.MSG_SIM</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-subtle btn-badge-off">@DefaultResource.MSG_NAO</span>
                                                        }
                                                    </dd>
                                                </div>
                                                <div class="h5 col-12 col-sm-12 col-md-3"></div>
                                            </div>

                                        </dl>

                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-row col-12 col-sm-12 col-md-12 flex-custom justify-content-center gap-register-salary">
                                <a class="btn btn-dark btn-lg" asp-action="Index" asp-route-state="true">Voltar</a>
                                <a class="btn btn-primary btn-lg" asp-action="Edit" asp-route-id="@Model.FuncionarioId">Editar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>