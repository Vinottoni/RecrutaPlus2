@model LoginViewModel

@{
    Layout = "_Layout_login";
    ViewData["Title"] = "Login - RecrutaPlus";
}

<div class="text-center text-lg-start BlackGradient">
    <div class="container py-4 d-flex justify-content-center size-background-container">
        <div class="col-lg-6 mb-5 mb-lg-0">
            <img src="~/img/RecrutaPlus.png" class="img-logo w-100 rounded-4 shadow-4" />
        </div>
        <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="cascading-right">
                <div class="card-body p-5 shadow-5">
                    @if(TempData["MensagemErro"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["MensagemErro"]
                        </div>
                    }

                    <div class="text-left mb-5">
                        <small class="fw-bold">Login With Your</small>
                        <h1 class="text-uppercase text-primary">Account</h1>
                    </div>
                    <form asp-controller="Login" asp-action="Entrar" method="post">
                        <fieldset class="gap-2 input-flex-custom">
                            <div class="position-custom col-sm-12 col-md-12">

                                <input asp-for="Username" id="inputEmail" type="text" name="username" class="text-input text-primary" placeholder="Enter your Email" autocomplete="off" required>
                                <label asp-for="Username" for="inputEmail" class="label-custom filled fw-bold"></label>
                                @Html.ValidationMessageFor(x => x.Username)
                            </div>
                            <div class="position-custom col-sm-12 col-md-12">

                                <input asp-for="Password" id="inputPassword" name="password" class="text-input text-primary" type="password" placeholder="Enter your Password" required>
                                <label asp-for="Password" for="inputPassword" class="label-custom filled fw-bold"></label>
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </fieldset>
                        <fieldset>
                            <button type="submit" class="btn-login-custom btn-block col-md-12 mt-4 mb-4 bg-primary">
                                <strong>LOGIN</strong>
                            </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
