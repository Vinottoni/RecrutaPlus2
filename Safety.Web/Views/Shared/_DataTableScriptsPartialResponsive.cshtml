
<script>

    $(document).ready(function () {

        var table = $('.datatables-table').DataTable(
            {
                responsive: true,
                dom: 'frtip', //Default Value: lfrtip
                language: {
                    url: '@Url.Content("~/")' + 'Portuguese-Brasil.json',
                },
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            });

        // Adicionar tooltips do Bootstrap para botões e links
        $('.datatables-table tbody').on('mouseenter', '[data-toggle="tooltip"]', function () {
            var title = $(this).attr('title');
            $(this).tooltip({
                title: title,
                placement: 'top',
                trigger: 'hover'
            });
            $(this).tooltip('show');
        });

        //copy
        $("#dataTableExportCopy").on("click", function () {
            table.button('.buttons-copy').trigger();
        });

        //excel
        $("#dataTableExportExcel").on("click", function () {
            table.button('.buttons-excel').trigger();
        });

        //print
        $("#dataTableExportPrint").on("click", function () {
            table.button('.buttons-print').trigger();
        });

        //pdf
        $("#dataTableExportPDF").on("click", function () {
            table.button('.buttons-pdf').trigger();
        });

    });

</script>

